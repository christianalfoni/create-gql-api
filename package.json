  "bugs": {
    "url": "https://github.com/christianalfoni/create-gql-api/issues"
  },
  "homepage": "https://github.com/christianalfoni/create-gql-api#readme",
  "devDependencies": {
    "@types/node": "^18.11.3",
    "esbuild": "^0.15.12"
  }
}
